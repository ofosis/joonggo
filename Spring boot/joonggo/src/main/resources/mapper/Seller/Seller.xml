<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kb.joonggo.Seller.SellerRepository">
    <select id="selectRow" parameterType="Integer" resultType="SellerDTO">
        select * from Seller where idx = #{sel_idx}
    </select>

    <select id="list" resultType="SellerDTO" parameterType="Integer">
        SELECT * FROM Seller
        ORDER BY sel_idx desc
        LIMIT #{pageNum}, 5;
    </select>

    <select id="countRow" resultType="Integer">
        select count(*) from Seller
    </select>
</mapper>